#include <iostream>

int main() {
    // Объявляем переменную для хранения длины в сантиметрах
        double centimeters;

            // Ввод длины в сантиметрах
                std::cin >> centimeters;

                    // Конвертация сантиметров в дюймы (1 дюйм = 2.54 см)
                        double inches = centimeters / 2.54;

                            // Вывод результата с точностью до 6 знаков после запятой
                                std::cout << inches << std::endl;

                                    return 0;
                                    }
